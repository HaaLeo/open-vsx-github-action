{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2022",
        "sourceMap": true,
        "strictPropertyInitialization": false,
        "noUnusedLocals": true,
        "newLine": "LF",
        "outDir": "./out",
        "tsBuildInfoFile": "./out/.tsbuildinfo",
        "incremental": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}
